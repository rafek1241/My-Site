@inherits MySite.Client.Base.Layout.NavMenuBase

@if (Menu != null)
{
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" onclick=@ToggleNavMenu>
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class=@(collapseNavMenu ? "collapse navbar-collapse" : "navbar-collapse") onclick=@ToggleNavMenu id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <NavLink class="nav-link" href="/" Match=NavLinkMatch.All>
                        <i class="fas fa-home"></i>
                    </NavLink>
                </li>
                @foreach (var link in Menu.MenuNavLinks.Where(p => p.NavLink.Link != "/").Select(p => p.NavLink))
                {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="@link.Link">
                            <i class="@link.Class"></i> @link.Name
                        </NavLink>
                    </li>
                }
            </ul>
        </div>
    </nav>
}

