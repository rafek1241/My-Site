      "Style/*.css",
      "Style/**/*.css",
      "Style/*.scss",
      "Style/**/*.scss",
      "Style/*.less",
      "Style/**/*.less"
    ],
    "minify": {
      "enabled": true,
      "commentMode": "all"
    }
  }
]